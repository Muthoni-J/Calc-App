<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E094E4"
    tools:context="com.example.calculatorapplication.MainActivity">


    <TextView
        android:id="@+id/display_result"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:hint="Answer"

        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_first"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/display_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Enter first digits"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_second"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_first"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Enter second digit"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Add"
        android:layout_width="109dp"
        android:layout_height="65dp"
        android:layout_below="@+id/edit_second"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="42dp"
        android:layout_toStartOf="@+id/Modulus"
        android:backgroundTint="#A11E84"
        android:text="Add"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Subtract"
        android:layout_width="131dp"
        android:layout_height="62dp"
        android:layout_below="@+id/Add"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="59dp"
        android:layout_toStartOf="@+id/Divide"
        android:backgroundTint="#A11E84"
        android:text="Subtract"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Modulus"
        android:layout_width="131dp"
        android:layout_height="67dp"
        android:layout_below="@+id/Subtract"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-168dp"
        android:layout_marginEnd="53dp"
        android:backgroundTint="#A11E84"
        android:text="Modulus"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Divide"
        android:layout_width="118dp"
        android:layout_height="61dp"
        android:layout_below="@+id/Modulus"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#A11E84"
        android:text="Divide"
        android:textAllCaps="false" />


</RelativeLayout>
